<% provide(:title, 'All users') %>
<% if !flash[:alert].blank? %>
  <div class="alert alert-info">
  <%= flash[:alert] %>
  </div>
<% end %>
<div class="row">
  <div class="col-md-3">
    <aside>
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    </aside>
  </div>
  <div class="col-md-9">
    <%= render "file_form"%>
  </div>
</div>

<div class="row">
  <div class="row">
    <div class="col-md-9">
      <h3>Archivos disponibles</h3>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-3">
      <%= form_tag resumes_path, :method => 'get', remote:true do %>
        <div class="input-group input-group-sm">
          <%= text_field_tag :search, params[:search], :class =>"form-control", :placeholder => "Buscar Archivo" %>
          <span class="input-group-btn">
            <%= button_tag "Buscar",name:nil,  type:"submit", class:"btn btn-default" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  
  <div id="table_files">
    <%= render "uploaded_files" %>
  </div>
</div>