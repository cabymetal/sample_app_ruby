<% provide(:title, 'All users') %>
<% if !flash[:alert].blank? %>
  <div class="alert alert-info">
  <%= flash[:alert] %>
  </div>
<% end %>
<div class="row">
  <div class="col-md-3">
    <aside>
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    </aside>
  </div>
  <div class="col-md-9">
    <%= render "file_form"%>
  </div>
</div>

<div class="row">
  <h3>Archivos disponibles</h3><hr>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Usuario original</th>
        <th>Descarga de Archivo</th>
        <th>Borrar de Archivo</th>
        <th>Fecha de subida</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.user.name %></td>
          <td><%= 
            if resume.file_url?
              link_to File.basename(resume.file_url.url), resume.file_url.url, download: File.basename(resume.file_url.url)
            end %></td>
          <td><%= link_to "Eliminar Archivo", resume, method: :delete, class: "btn btn-danger btn-xs", 
               data: {confirm: "Are you sure that you wish to delete #{resume.file}?"} %></td>
          <td> Posted <%= time_ago_in_words(resume.created_at) %> ago.
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @resumes %>
</div>